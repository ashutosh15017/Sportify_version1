<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDark"
    android:layout_margin="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="schemas.android.com/apk/res-auto"
        android:id="@+id/attendance_clicked_card_view"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardAccent"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Sport name"
                android:fontFamily="sans-serif-condensed"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center">

                <CheckBox android:id="@+id/present_check"

                    android:layout_margin="16dp"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:button="@null"
                    android:background="@drawable/tick_check"

                    android:textColor="@android:color/white"
                    />

                <CheckBox android:id="@+id/absent_check"

                    android:layout_margin="16dp"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:button="@null"
                    android:background="@drawable/suggestion_tt"

                    android:textColor="@android:color/white"
                   />

                <CheckBox android:id="@+id/medical_check"

                    android:layout_margin="16dp"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:button="@null"
                    android:background="@drawable/medical_check"

                    android:textColor="@android:color/white"
                    />


            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>