<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDark"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_layout">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardAccent"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/email"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_alignStart="@+id/name"
                android:layout_alignTop="@+id/student_email"
                card_view:srcCompat="@drawable/email" />


            <ImageView
                android:id="@+id/name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"

                card_view:srcCompat="@drawable/name" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/name"
                android:layout_alignStart="@+id/student_email"
                android:layout_gravity="center_vertical"
                android:text="Member name"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/name"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/student_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/student_name"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/email"
                android:text="Member Email"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>