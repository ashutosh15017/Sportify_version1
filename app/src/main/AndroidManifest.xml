<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ishmeetkaur.sportify_version1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:statusBarColor="@color/colorPrimary"
        android:supportsRtl="true">
        <activity
            android:name=".Login"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:statusBarColor="@color/colorPrimary"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:icon="@drawable/logo"
            android:label="Sportify"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseSports"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddPost"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Home_Coordinator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Attendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeamDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTeamMemberActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Attendance_Clicked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Suggestion_Coordinator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Suggestions_Student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SportDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" ></activity>
    </application>

</manifest>